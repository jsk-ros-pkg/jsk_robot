    <!-- DETECT TRASHBINS (candidates) WITH TRASHBIN HANDLE INFORMATION -->
    <node pkg="jsk_fetch_startup" type="trashbins_pose_estimator"
        name="trashbins_pose_estimation_server"
        output="screen">
      <rosparam>
        trashbin_l: 0.34
        trashbin_w: 0.24
        trashbin_h: 0.49
      </rosparam>
    </node>
  </group>

  <node pkg="jsk_fetch_startup" type="container_occupancy_detector"
        name="container_occupancy_detector"
        output="screen" respawn="true">
