    <param name="reprojection_threshold" value="10.0" />
    <param name="distanceratio_threshold" value="0.60" />
    <param name="relative_pose" value="0 0 0 0 0 0 1" />
    <param name="error_threshold" value="50.0" />
    <param name="publish_tf" value="true" />
    <!-- remap topic names -->
    <remap from="ImageFeature0D" to="$(arg DEFAULT_NAMESPACE)/ImageFeature0D" />
    <remap from="ObjectDetection" to="~ObjectDetection" />
    <remap from="ObjectDetection_agg" to="~ObjectDetection_agg" />
    <remap from="object_pose" to="~object_pose" />
    <remap from="tf" to="~tf" />
    <!-- remap service names -->
    <remap from="SetTemplate" to="~SetTemplate" />
