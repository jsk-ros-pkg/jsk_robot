(ros::roseus "nao-test")
(load "package://naoeus/euslisp/nao-interface.l")
(load "package://eus_assimp/euslisp/eus-assimp.l")
(load "package://euscollada/nao.l")
(nao)
(setq *nao* (nao))
(update-to-original-meshfile *nao* :scale 1.0)
(objects (list *nao*))

(setq *ni* (instance nao-interface :init :namespace "nao"))

(unix:sleep 1)
(send *ni* :servo-on)
(dotimes (i 3)
  (send *nao* :arms :elbow-p :joint-angle (if (evenp i) -20 -90))
  (send *ni* :angle-vector (send *nao* :angle-vector) 2000)
  ;;(send *ni* :wait-interpolation)
  )

(send *ni* :go-pos 1 0 0)