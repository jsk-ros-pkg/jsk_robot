[Unit]
Description=JSK SpotKinova ROS bringup Service

[Service]
Type=simple
ExecStart=/bin/bash -c ". /opt/ros/roscore_poststart.bash && \
. /home/spot/spot_ws/devel/setup.bash && \
if [ -e /var/lib/robot/config.bash ];then . /var/lib/robot/config.bash ;fi && \
roslaunch jsk_spotkinova_startup spotkinova_bringup.launch \
    launch_spot_driver:=false \
    --wait --screen"
ExecStop=/bin/kill -WINCH ${MAINPID}
KillMode=control-group
KillSignal=SIGTERM
User=spot
Group=spot

[Install]
WantedBy=multi-user.target
